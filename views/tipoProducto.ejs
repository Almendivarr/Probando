          <!-- Agrega aquí los campos del formulario -->
          <form action="/subirProducto" method="post" enctype="multipart/form-data">
            <div class="form-group mt-1">
              <label for="nombre">Nombre del Producto:</label>
              <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>
            <div class="form-group mt-1">
              <label for="descripcion">Descripción:</label>
              <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required></textarea>
            </div>
            <div class="form-group mt-1">
              <label for="precio">Precio:</label>
              <input type="number" class="form-control" id="precio" name="precio" required>
            </div>
            <div class="form-group mt-2">
              <label for="condicion">Condición:</label>
              <select class="form-control" id="condicion" name="condicion" required>
                <option value="">Seleccionar</option>
                <option value="nuevo">Sin estrenar(Conserva la etiqueta)</option>
                <option value="usado">Nuevo(Nunca se ha usado)</option>
                <option value="usado">Como nuevo(En perfectas condiciones)</option>
                <option value="usado">En buen estado(Bastante usado pero bien conservado)</option>
                <option value="usado">En condiciones aceptables(Con evidentes signos de desgaste)</option>
                <option value="usado">Lo ha dado todo(Puede que toque repararlo)</option>
              </select>
            </div>
            <div class="form-group mt-2">
              <label for="imagen">Imagen del Producto:</label>
              <input type="file" class="form-control-file" id="imagen" name="imagen">
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary mt-2">Enviar</button>
            </div>
          </form>
        </div>
