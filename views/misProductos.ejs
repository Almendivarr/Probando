  <script>
    // Obtener referencias a la tarjeta y al formulario
    const tarjeta = document.getElementById('algo');
    const formulario = document.getElementById('formulario');

    // Obtener referencia al enlace para abrir el formulario
    const abrirFormulario = document.getElementById('abrirFormulario');

    // Agregar un evento de clic al enlace para abrir el formulario
    abrirFormulario.addEventListener('click', function (e) {
      e.preventDefault(); // Evitar el comportamiento predeterminado del enlace
      formulario.style.display = 'block'; // Mostrar el formulario
    });
  </script>
