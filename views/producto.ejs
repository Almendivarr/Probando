<!doctype html>
<html lang="en">

<head>

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontisto/css/fontisto/fontisto.css">
  <title>Wallapop</title>

  <style>
    .change-color-on-hover-black {
      color: green;
      /* Establece el color predeterminado del texto como verde */
      text-decoration: none;
      /* Quita el subrayado predeterminado */
    }


    .main-content {
      margin-top: 100px;
      /* ajusta el valor según sea necesario */
    }

    .imagen-producto {
      width: 600px;
      /* Ancho deseado */
      height: 450px;
      /* Alto deseado */
      object-fit: cover;
      /* Ajusta la imagen manteniendo la relación de aspecto y cubriendo completamente el contenedor */
    }
  </style>
</head>

<body>
  <!-- Nav bar -->
  <nav class="navbar navbar-expand-lg navbar-nav-scroll bg-light navbar-light mb-0 mt-0 fixed-top">
    <div class="container-fluid">
      <a href="/index">
        <img src="http://localhost:3000/logoWalla.png" alt="" width="210" height="80" class="d-inline-block align-text-top">
    </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <form action="/logout" method="get">
        <button type="submit" class="btn rounded rounded-pill bg-danger"><i class="fa-solid fa-plus"></i>Cerrar sesión</button>
      </form>
      <form action="/misProductos" method="get">
        <button type="submit" class="btn rounded rounded-pill bg-warning"><i class="fa-solid fa-plus"></i>mis productos</button>
      </form>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto  align-items-center ">
          <li class="nav-item">
            <i class="fa-regular fa-heart fa-2x"></i>
          </li>
          <li class="nav-item">
            <a class="navbar-brand ms-4 text-black" href="index.html">Favoritos </a>
          </li>
          <li class="nav-item">
            <i class="fa-regular fa-envelope fa-2x"></i>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Buzon</a>
          </li>
          <!-- Imagen dentro de un círculo -->
          <li class="nav-item">
            <div style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden;">
              <img src="/imagenesUsuario/<%= imagenUser %>" alt="Imagen" style="width: 100%; border-radius: 50%;">
            </div>
          </li>
          <li class="d-flex">
            <a class="nav-link text-dark" href="Formulario.html">Tú</a>
          </li>
          <li class="d-flex">
            <form action="/tipoProducto" method="get">
              <button type="submit" class="btn rounded rounded-pill bg-success"><i class="fa-solid fa-plus"></i>Añadir
                un
                producto</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Contenedor principal del contenido -->
  <div class="container-fluid" style="background-color: #f4f5f7; margin-top: 5rem;">
    
    <br>
    <br>
    <br>
    <div class="row">
      <div class="col-4">
      </div>
      <div class="col-4">
        <div class="card bg-white">
          <div class="card-head mt-4 ms-4 me-4">
            <div class="row">
              <div class="col-8">
                <div class="row">
                  <div class="col-2">
                    <img src="http://localhost:3000/imagenesUsuario/<%= userProducto.id %>_imagen.jpg" alt="Imagen" style="width: 100%; border-radius: 50%;">
                  </div>
                  <div class="col-5">
                    <p class="card-text"><%= userProducto.nombre%></p>
                  </div>
                  <div class="col-5">
                    <p class="card-text">10 Ventas</p>
                  </div>
                  <div class="col-2">
                  </div>
                  <div class="col-5">
                    <p class="card-text">Estrellas</p>
                  </div>
                  <div class="col-5">
                    <p class="card-text">5 valoraciones</p>
                  </div>
                </div>
              </div>
              <div class="col-2" style="margin-top: 1rem;">
                <button type="button" class="btn rounded rounded-pill bg-secondary "style="width:100%" ><i
                    class="fa-solid fa-heart text-danger"></i></button>
              </div>
              <div class="col-2" style="margin-top: 1rem;">
                <button type="button" 
                  class="btn rounded rounded-pill bg-success border-success " style="width:100%">Chat</button>
              </div>
            </div>
          </div>
          <div class="card-body w-100">
            <img src="http://localhost:3000/productos/<%= producto.imagen %>" alt="" class="img-fluid img-thumbnail imagen-producto">
            <h3 class="card-title mt-2"><%= producto.precio %> €</h3>
            <h4 class="card-title  mt-2"><%= producto.nombre %> - <%= producto.condicion %></h4>
            <p class="card-text"><%= producto.descripcion %></p>
            <p class="card-text  mt-2" style="color:purple"><i class="fa-solid fa-truck"> </i>Envío disponible</p>
          </div>
        </div>
        <div class="col-4">
        </div>
      </div>
    </div>
    <br>
    <br>
    <br>
    <br>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/cfbff32ceb.js" crossorigin="anonymous"></script>
</body>

</html>