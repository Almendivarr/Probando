<!doctype html>
<html lang="en">

<head>

  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontisto/css/fontisto/fontisto.css">
  <title>Wallapop</title>

  <style>
    /* Estilo para subrayar enlaces en la segunda barra de navegación cuando el cursor está encima */
    .second-navbar .navbar-nav .nav-link:hover {
      border-bottom: 2px solid black;

    }

    .change-color-on-hover-black {
      color: green;
      /* Establece el color predeterminado del texto como verde */
      text-decoration: none;
      /* Quita el subrayado predeterminado */
    }

    .change-color-on-hover-black:hover {
      color: black;
      /* Cambia este color al que desees */
      cursor: pointer;
    }

    .main-content {
      margin-top: 100px;
      /* ajusta el valor según sea necesario */
    }

    .imagen-producto {
      width: 260px;
      /* Ancho deseado */
      height: 271px;
      /* Alto deseado */
      object-fit: cover;
      /* Ajusta la imagen manteniendo la relación de aspecto y cubriendo completamente el contenedor */
    }
  </style>
</head>

<body>
  <!-- Nav bar -->
  <nav class="navbar navbar-expand-lg navbar-nav-scroll bg-light navbar-light mb-0 mt-0 fixed-top">
    <div class="container-fluid">
      <a href="/index">
        <img src="http://localhost:3000/logoWalla.png" alt="" width="210" height="80" class="d-inline-block align-text-top">
    </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <input class="form-control me-2 rounded-pill border-dark" style="width: 1150px;" type="search"
        placeholder=" Buscar en todas las categorias">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto  align-items-center ">
          <li class="d-flex">
            <form action="/tipoProducto" method="get">
              <button type="submit" class="btn rounded rounded-pill bg-white border-success text-success me-3"><i class="fa-solid fa-plus"></i>registrarse o iniciar sesion</button>
            </form>
          <li class="d-flex">
            <form action="/tipoProducto" method="get">
              <button type="submit" class="btn rounded rounded-pill bg-success"><i class="fa-solid fa-plus"></i>Añadir
                un
                producto</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Nav bar 2-->
  <nav class="navbar navbar-expand-lg navbar-light mb-5 bg-light second-navbar fixed-top pb-0" style="margin-top:80px;">
    <div class="container-fluid border-top border-bottom ">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto  align-items-center ">
          <li class="nav-item">
            <a class="nav-link active text-black ms-3" aria-current="page" href="personajes.html"><i
                class="fa-solid fa-bars"></i> Todas las categorías</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Cine, Libros y Música</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Moda y accesorios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Hogar y jardin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Coches</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="personajes.html">Deportes y ocio</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Titulos -->
  <div class="container" style="margin-top:200px;">
    <div class="row">
      <div class="col-12 text-center align-items-center mb-4">
        <h1 class="fw-bold">Compra y vende cosas de segunda mano</h1>
        <h1>casi, casi, sin moverte del sofá</h1>
      </div>
      <div class="col-9">
        <h2 class="fw-bold">Más como esto</h2>
      </div>
      <div class="col-3">
        <a class="fw-bold change-color-on-hover-black" href="#">Ver todo ></h2>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row" id="tarjetasContainer">
      <% productos.forEach(producto=> { %>
        <div class="col-md-3 mb-3">
          <a href="/producto/<%= producto.id %>" class="card-link">
          <div class="card border-0">
            <div class="card-head border-0">
              <img src="http://localhost:3000/productos/<%= producto.imagen %>" class="img-fluid img-thumbnail imagen-producto">
            </div>
            <div class="card-body">
              <h5 class="card-title text-dark">
                <%= producto.precio %>€
              </h5>
              <p class="card-text text-dark">
                <%= producto.nombre %>
              </p>
            </div>
          </div>
          </a>
        </div>
        <% }); %>

    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/cfbff32ceb.js" crossorigin="anonymous"></script>
</body>

</html>